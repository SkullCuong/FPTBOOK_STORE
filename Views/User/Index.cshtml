@model IEnumerable<FPTBOOK_STORE.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12 col-lg-10 col-xxl-12 d-flex">
        <div class="card flex-fill">
            <div class="card-header">

                <h5 class="card-title mb-0">Customer List</h5>
            </div>

            <table class="table table-hover my-0" style="margin-left:10px ;">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Brith Date</th>
                        <th>Address</th>
                        <th>Role</th>
                        <th>Phone</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Gmail
                            </td>
                            <td>
                                @item.Password
                            </td>
                            <td>
                                @item.BirthDate
                            </td>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.Role
                            </td>
                            <td>
                                @item.Phone
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"
                                style="font-size:7px ;"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                                style="font-size:7px"><i class="fa-sharp fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
